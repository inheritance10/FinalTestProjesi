    <Button
        android:id="@+id/signup_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:background="@color/teal_700"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
